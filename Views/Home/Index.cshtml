@{
    ViewData["Title"] = "Fã Clube - Gestão de Membros";
}

@{
    ViewData["Title"] = "Gerenciamento do Fã Clube";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
            <!-- Conteúdo principal -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Bem-vindo ao Sistema do Fã Clube</h1>
            </div>
            <div class="row">
                <!-- Cards -->
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">👥 Lista de Membros</h5>
                            <a href="/Members/Index" class="btn btn-primary">Acessar</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">➕ Add Membro</h5>
                        <a href="/Members/Create" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addMemberModal">Cadastrar</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">🪪 Carteirinhas</h5>
                            <a href="/Cards/Index" class="btn btn-info">Gerar</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">💰 Mensalidades</h5>
                            <a href="/Payments/Index" class="btn btn-warning">Acessar</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
