@{
    ViewData["Title"] = "Fã Clube - Gestão de Membros";
}

@{
    ViewData["Title"] = "Gerenciamento do Fã Clube";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column mt-3">
                        <li class="nav-item">
                            <a class="nav-link active" href="/Home/Index">
                                🏠 Início
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Members/Index">
                                👥 Lista de Membros
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Members/Create">
                                ➕ Cadastrar Membros
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Cards/Index">
                                🪪 Carteirinhas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Payments/Index">
                                💰 Mensalidades
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Conteúdo principal -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Bem-vindo ao Sistema do Fã Clube</h1>
                </div>
                <div class="row">
                    <!-- Cards -->
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">👥 Lista de Membros</h5>
                                <p class="card-text">Veja todos os membros cadastrados.</p>
                                <a href="/Members/Index" class="btn btn-primary">Acessar</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">➕ Cadastrar Membros</h5>
                                <p class="card-text">Adicione novos membros ao sistema.</p>
                                <a href="/Members/Create" class="btn btn-success">Cadastrar</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">🪪 Carteirinhas</h5>
                                <p class="card-text">Emita carteirinhas para os membros.</p>
                                <a href="/Cards/Index" class="btn btn-info">Gerar</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">💰 Mensalidades</h5>
                                <p class="card-text">Gerencie os pagamentos mensais.</p>
                                <a href="/Payments/Index" class="btn btn-warning">Acessar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
